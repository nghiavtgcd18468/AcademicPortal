				{
					<li class="nav-item">
						<a class="nav-link" href="/">Home</a>
					</li>
				}
				@if (User.IsInRole("admin") || User.IsInRole("staff"))
				{
					<li class="nav-item">
						<a class="nav-link" href="/Account">Manage Account</a>
					</li>
				}
				@if (User.IsInRole("staff"))
				{
					<li class="nav-item">
						<a class="nav-link" href="/CourseCategory">Manage Course Category</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Course">Manage Course</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Topic">Manage Topic</a>
					</li>
				}
				@if (User.IsInRole("trainer") || User.IsInRole("trainee"))
				{
					<li class="nav-item">
						<a class="nav-link" href="/CourseCategory">Course Category</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Course">Course</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/Topic">Topic</a>
					</li>
