@model AcademicPortal.ViewModels.ProfileViewModel
@{
	ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new { @class = "form-horizontal", style = "width: 60%" }))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(m => m.UserId)
	<div class="form-group row">
		@Html.LabelFor(m => m.FullName, new { @class = "col-md-3 control-label" })
		<div class="col-md-5">
			@Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group row">
		@Html.LabelFor(m => m.User.Email, new { @class = "col-md-3 control-label" })
		<div class="col-md-5">
			@Html.TextBoxFor(m => m.User.Email, new { @class = "form-control" })
		</div>
	</div>

	if (Model.RoleName == "Admin")
	{
		@Html.Partial("ProfileEdit/_AdminProfileEdit")
	}
	else if (Model.RoleName == "Staff")
	{
		@Html.Partial("ProfileEdit/_StaffProfileEdit")
	}
	else if (Model.RoleName == "Trainer")
	{
		@Html.Partial("ProfileEdit/_TrainerProfileEdit")
	}
	else if (Model.RoleName == "Trainee")
	{
		@Html.Partial("ProfileEdit/_TraineeProfileEdit")
	}

	<div class="form-group" id="update-button">
		<div class="col-md-offset-2 col-md-10 d-flex justify-content-center">
			<button type="submit" class="btn btn-primary">
				<i class="fa fa-edit"></i> Update
			</button>
		</div>
	</div>
}